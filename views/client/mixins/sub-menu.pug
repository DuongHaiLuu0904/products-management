mixin sub_item(items, path) 
    ul.dropdown-menu
        each item in items
            li.dropdown-item(class=item.children && item.children.length > 0 ? 'has-children' : '')
                a.dropdown-link(href=`${path}/${item.slug}`) #{item.title}
                if item.children && item.children.length > 0 
                    +sub_item(item.children, path)
