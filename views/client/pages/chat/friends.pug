extends  ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .container.my-3 
        include ../../partials/list-button-user.pug
        
        .row 
            .col-12 
                +box-head(title)

        .row(data-users-friends=user.id)
            each user in users
                .col-6(user-id=user.id)
                    div(class='box-user refuse')
                        div(class='inner-avatar')
                            img(
                                src=(user.avatar ? user.avatar : '/images/avatar.jpg')
                                alt=user.fullName
                            )
                        div(class='inner-info')
                            div(class='inner-name') #{user.fullName}
                            div(class='inner-buttons') 
                                button(
                                    class='btn btn-danger btn-sm m-1'
                                    button-delete-friend=user.id
                                )
                                    i.fa-solid.fa-user-minus
                                    | Hủy kết bạn

block script
    script(type="module", src="/js/users.js")
